# Production Environment Variables for Netlify Deployment
# Copy this file and add these variables to your Netlify site settings

# Application
NODE_ENV=production
VITE_APP_NAME=Home Renovation Hub
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=https://your-api-domain.com/api
VITE_API_TIMEOUT=30000

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Application Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Map Configuration (if using maps)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Stripe Configuration (if using payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Sentry Configuration (if using error tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID 