{
  "name": "Home Renovation Hub",
  "short_name": "HomeReno Hub",
  "description": "Connect homeowners with trusted contractors for renovation projects",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3B82F6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["business", "lifestyle", "utilities"],
  "icons": [
